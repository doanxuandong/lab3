@using test.Models
@using PagedList.Mvc;
@model PagedList.PagedList<test.Models.CHUDE>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center;"> QUẢN LÝ CHỦ ĐỀ</h2>


<button style="background-color: deepskyblue;border-radius:5px;width: 100px;height:50px">
    @Html.ActionLink("Thêm mới", "Create","ChuDe")
</button>
<br />
<br />
<table class="table">
    <tr style="background-color: deepskyblue">
        <th style="text-align:center;width:140px">
           Mã Chủ Đề
        </th>
        <th style="text-align:center;width:200px">Tên Chủ Đề </th>
    
        <th style="text-align:center">

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaCD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenChuDe)
            </td>
           
            <td align="right">
                <a href="@Url.Action("Edit", new { id = item.MaCD })" class="btn btn-warning" role="button">Sửa</a>
                <a href="@Url.Action("Details", new { id = item.MaCD })" class="btn btn-primary" role="button">Chi tiết</a>
                <a href="@Url.Action("Delete", new { id = item.MaCD })" class="btn btn-danger" role="button">Xóa</a>
            </td>
        </tr>
    }
</table>
@*Tạo iên kết phần trang*@
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
    <div class="MenuTrang">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
    </div>
    <style>
        .MenuTrang {
            display: inline;
            text-align: center;
        }
    </style>