@using test.Models
@using PagedList.Mvc
@model PagedList.PagedList<test.Models.KHACHHANG>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align: center">QUẢN LÝ KHÁCH HÀNG</h2>

<button style="background-color: deepskyblue;border-radius:5px;width: 100px;height:50px">
    @Html.ActionLink("Thêm mới", "Create")
</button>
<br />
<br />
<table class="table">
    <tr>
    <tr style="background-color: deepskyblue">
        <th style="text-align:center;width:140px">
            Họ Và Tên
        </th>
        <th style="text-align:center;width:80px"> Địa Chỉ </th>
        <th style="text-align:center;width:80px">
            Điện Thoại
        </th>
        <th style="text-align:center;width:100px">
            Tên Đăng Nhập
        </th>
        <th style="text-align:center;width:80px">
            Mật Khẩu
        </th>
        <th style="text-align:center;width:80px">
            Ngày Sinh
        </th>
        <th style="text-align:center;width:100px">
            Giới Tính
        </th>
        <th style="text-align:center;width:100px">
            Email
        </th>
        <th style="text-align:center">

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HoTenKH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChiKH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DienThoaiKH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenDN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MatKhau)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgaySinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GioiTinh)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>

            <td>
                <a href="@Url.Action("Edit", new { id = item.MaKH })" class="btn btn-warning" role="button">Sửa</a>
                <a href="@Url.Action("Details", new { id = item.MaKH })" class="btn btn-primary" role="button">Chi tiết</a>
                <a href="@Url.Action("Delete", new { id = item.MaKH })" class="btn btn-danger" role="button">Xóa</a>
            </td>
        </tr>
    }

</table>
 Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
</div>
<style>
    .MenuTrang {
        display: inline;
        text-align: center;
    }
</style>